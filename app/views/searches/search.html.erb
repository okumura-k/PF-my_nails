<div class="container">
  <div class="col-xs-12">
    <% if @model == "user" %>
    <h2 class="text-center">'<%= @content %>'の検索結果</h2>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>ユーザー名</th>
            </tr>
        </thead>
    <% @records.each do |user| %>
        <tbody>
            <tr>
                <th>
                    <%#= attachment_image_tag(user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40') %>
                </th>
                <th>
                    <%= user.name %>
                </th>
                
            </tr>
        </tbody>
    <% end %>
    <% elsif @model == "nail" %>
    <h2 class="text-center"> '<%= @content %>'の検索結果</h2>
    <table class="table">
        <thead>
            <tr>
                <th>nail画像</th>
                <th>内容</th>
            </tr>
        </thead>
        <% @records.each do |nail| %>
        <tbody>
            <tr>
                <th>
                    <%#= attachment_image_tag(book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40') %>
                </th>
                <th>
                    <%= nail.introduction %>
                </th>
            </tr>
        </tbody>
        <% end %>
    <% end %>
    </table>
  </div>
</div>