<h2 class="text-center">フォロー一覧</h2>
<% if @users.exists? %>
  <% @users.each do |user| %>
    <table class='table'>
      <head>
        <tr>
          <th>ユーザー</th>
          <th>フォロー</th>
          <th>フォロワー</th>
          <th></th>
          <th arign='6'></th>
        </tr>
      </head>
      <tbody>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %>
              <%= user.name %>
          </td>
          <td>フォロー数:<%= user.followings.count %></td>
          <td>フォロワー数:<%= user.followers.count %></td>
          <td><%= link_to '詳細', user, class: 'user_#{user.id}' %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>