<!DOCTYPE html>
<html>
  <head>
    <title>My_nails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic:wght@300;400&display=swap" rel="stylesheet">

    <%= stylesheet_link_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body style="background-color: #b096a6">
    <%= render 'layouts/header', user: @user %>
    <main>
      <div class="serch_form">
          <%= form_with url: search_path,method: :get, local: true do |f| %>
            <%= f.text_field :content, placeholder: "キーワード検索", class: "search-text" %>
            <%= f.select :model,options_for_select({"会員"=>"user","ネイル"=>"nail"})%>
            <%= f.select :method,options_for_select({"完全一致"=>"perfect","部分一致"=>"partial"})%>
            <%= f.submit'検索', class: "btn btn-sm btn-light" do %>
            <i class="fas fa-search"></i>
            <% end %>
          <% end %>
      </div>
    <%= yield %>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
