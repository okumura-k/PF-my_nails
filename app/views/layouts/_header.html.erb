<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><%= image_tag 'logo.jpg', size: '120x80' %></a>
        <ul class="navbar-nav d-flex align-items-center">
      <% if user_signed_in? %>
        <li>
          <%= link_to user_path(current_user)  do %>
             <%= image_tag current_user.get_profile_image, size: '80x80', class: "rounded-circle" %>
          <% end %>
        </li>
        <li>
          <%= link_to "新規投稿",new_nail_path,class: 'btn btn-sm btn-light' %>
        </li>
        <li>
          <%= link_to "ネイル投稿一覧",nails_path,class: 'btn btn-sm btn-light' %>
        </li>
        <li>
          <%= link_to "会員一覧",users_path, class: 'btn btn-sm btn-light' %>
        </li>
      <% else %>
        <li>
          <%= link_to "新規登録",new_user_registration_path,class: 'btn btn-sm btn-light' %>
        </li>
        <li>
          <%= link_to "ログイン",new_user_session_path,class: 'btn btn-sm btn-light' %>
        </li>
        <li>
          <%= link_to "ネイル投稿一覧",nails_path,class: 'btn btn-sm btn-light' %>
        </li>
      <% end %>
      </ul>
      <div class="serch_form">
          <%= form_with url: search_path,method: :get, local: true do |f| %>
            <%= f.text_field :content, placeholder: "キーワード検索", class: "search-text" %>
            <%= f.select :model,options_for_select({"会員"=>"user","ネイル"=>"nail"})%>
            <%= f.select :method,options_for_select({"完全一致"=>"perfect","部分一致"=>"partial"})%>
            <%= f.submit'検索', class: "btn btn-sm btn-light" do %>
            <i class="fas fa-search"></i>
            <% end %>
          <% end %>
      </div>
    </div>
  </nav>

</header>
