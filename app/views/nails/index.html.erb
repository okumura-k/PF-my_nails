<div class="container">
<h3 class="text-center">ネイル投稿一覧</h3>
  <div class="row">
    <% @nails.each do |nail| %>
    <div class="col">
        <%= link_to  nail_path(nail.id) do %>
        <%= image_tag nail.image, size: "200x200" %>
        <% end %>
        <br>
        <%= image_tag nail.user.get_profile_image, size: '50x50' %>
        <%= nail.user.name %><br>
        <%= nail.introduction %><br>
        <p>コメント数 <%= nail.nail_comments.count %>
        いいね数全件</p>
        
    </div>
    <% end %>
    
  </div>
    <%= paginate @nails %>
</div>