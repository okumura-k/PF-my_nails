<div class="container text-center">
  <h3>ネイル投稿詳細一覧</h3>
  <div class="row">
  </div>
    <div class="col">
  <table>
    <tr>
      <td><%= image_tag @nail.user.get_profile_image, size: '50x50' %></td>
      <td><%= @nail.user.name %></td>
      <td><% if @nail.image.attached? %>
            <%= image_tag @nail.image, size: "200x200" %>
          <% else %>
            <%= image_tag 'no_image', size: "200x200" %>
          <% end %>
      </td>
      <td><%= @nail.introduction %></td>
    </tr>
  </table>
  </div>
  <% if @nail.user == current_user %>
  <%= link_to "削除", @nail, method: :delete, class: "btn btn-sm btn-danger" %>
  <% end %>
</div>