<div class="container text-center fixed-center">
  <h3>プロフィール編集</h3>
    <%= form_with model:@user do |f| %>
    <table class ="table table-borderless">
        <tr>
          <th>プロフィール画像</th>
          <td><%= f.file_field :profile_image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th>ユーザー名</th>
          <td><%= f.text_field :name,placeholder:"ネイルちゃん",autofocus: true %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email,placeholder:"nail@my_nails.com",autofocus: true %></td>
        </tr>
      </table>
      <%= f.submit "編集を保存",class: 'btn btn-sm btn-success' %>
      <% end %>
</div>