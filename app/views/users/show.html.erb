<div class="container">
  <h3 class="text-center">My_page</h3>
  <div class="row">
    <table>
      <tr>
        <td><%= image_tag @user.get_profile_image, size: '200x200' %>
        <%= @user.name %></td>
           <% if current_user.id == @user.id %>
        <td><%= link_to "編集", edit_user_path(@user.id), class: "btn btn-sm btn-success" %></td>
        <% end %>
      </tr>
    </table>
  </div>
  <div class="row">
      <% @nails.each do |nail| %>
      <div class="col">
        <%= link_to nail_path(nail.id) do %>
        <%= image_tag nail.image, size: "200x200" %>
        <% end %>
      <p><%= link_to "#{nail.nail_comments.count} コメント", nail_path(nail.id) %>
      合計のいいね数表示</p>
    </div>
    <% end %>
  </div>
  <%= paginate @nails %>
</div>