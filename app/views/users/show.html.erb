<div class="container">
  <div class="row">
    <table>
      <tr>
        <td><%= image_tag @user.get_profile_image, size: '50x50' %>
        <%= @user.name %></td>
           <% if current_user.id == @user.id %>
        <td><%= link_to "編集", edit_user_path(@user.id), class: "btn btn-sm btn-success" %></td>
        <% end %>
      </tr>
    </table>
    <div>
      <% @nails.each do |nail| %>
      <%= link_to nail_path(nail.id) do %>
      <%= image_tag nail.image, size: "200x200" %>
      <% end %>
    </div>
    <div>
      <%= nail.introduction %>
    </div>
    <p><%= link_to "#{nail.nail_comments.count} コメント", nail_path(nail.id) %></p>
    <% end %>

  </div>
</div>