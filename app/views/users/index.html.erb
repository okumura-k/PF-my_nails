<div class="container">
   <h3 class="text-center">会員一覧</h3>
   <table class='table'>
    <thead class="bg-light text-dark">
      <tr>
        <th>ユーザー名</th>
        <th>投稿数</th>
        <th>フォロワー数</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user.id) do %>
            <%= image_tag user.get_profile_image, size: '100x100', class: "rounded-circle" %><br>
            <%= user.name %>
            <% end %>
      
          </td>
          <td><%= user.nails.count %></td>
          <td><%= user.followers.count %></td>
      <% end %> 
        </tr>
    </tbody>
  </table>
</div>
