<div class="container">
   <h3 class="text-center">会員一覧</h3>
   <table class='table'>
    <thead class="bg-light text-dark">
      <tr>
        <th>プロフィール画像</th>
        <th>ユーザー名</th>
        <th>投稿数</th>
        <th>フォロワー数</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= image_tag user.get_profile_image, size: '100x100' %>
          </td>
          <td>
            <%= link_to users_path(user.id) do %>
            <%= user.name %>
            <% end %>
      <% end %>
          </td>
          <td></td>
          <td></td>
        </tr>
    </tbody>
  </table>
</div>
