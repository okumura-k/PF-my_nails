<div class="text-center container">
  <h3>会員登録</h3>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
　<%= render "devise/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col">
      <table class ="table table-borderless">
        <tr>
          <th>ユーザー名</th>
          <td><%= f.text_field :name,placeholder:"ネイルちゃん",autofocus: true %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email,placeholder:"nail@my_nails.com",autofocus: true %></td>
        </tr>
        <tr>
          <th>パスワード</th>
          <td>
            <%= f.password_field :password,placeholder:"6文字以上" %></td>
        </tr>
        <tr>
          <th>パスワード（確認用）</th>
          <td><%= f.password_field :password_confirmation,placeholder:"同上", autocomplete: "new-password" %></td>
        </tr>
      </table>
      <%= f.submit "会員登録",url: nails_path,class: 'btn btn-sm btn-success' %>
      <% end %>
    </div>
  </div>
</div>
